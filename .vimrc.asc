set number           "Set vertical numbers on left
set scrolloff=5      " Leave 5 lines of buffer when scrolling
set sidescrolloff=10 " Leave 10 characters of horizontal buffer when scrolling

colorscheme gruvbox
set background=dark

" Showcase comments in italics
highlight Comment cterm=italic gui=italic

syntax on
set encoding=utf-8
set number relativenumber


" Easy tab navigation
nnoremap <C-Left> :tabprevious<CR>
nnoremap <C-Right> :tabnext<CR>

"setting tabs to be 4 spaces
set tabstop=4 softtabstop=4 shiftwidth=4

"executing vimrc in the same folder that file is 
set exrc

"better search :/
set nohlsearch
set hlsearch
set incsearch

set wildmode=longest,list,full

"Turnoff bells
set noerrorbells novisualbell

"no wrap when number of characters passes window
set nowrap

"no swap file(boring error)
set noswapfile

set signcolumn=yes

"setting theme to dark
set bg=dark

"setting key for normal mode from esc to jk
imap jk <Esc>

"setting filetype
set filetype

"setting tabs to go verticaly
set splitbelow splitright

"auto reload changed file
set autoread

"Tab autocomplete in command mode
set wildmenu

"Show status line on start up
set laststatus=2

"reduce redraw frequency
set lazyredraw

" Persistent undo
set undodir=~/.vim/undo/
set undofile
set undolevels=1000
set undoreload=10000


 
"Pluging with vim-plug
call plug#begin('~/.vim/plugged')
Plug 'gruvbox-community/gruvbox'
Plug 'preservim/nerdtree'
Plug 'preservim/tagbar'
Plug 'powerline/powerline'
call plug#end()

